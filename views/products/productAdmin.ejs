<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Five Shoes</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/8c2ec1b35f.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/styles-admin.css">
    <link rel="stylesheet" href="/css/styles.css">

</head>

<body>

    <!-- ********** HEADER *********** -->
    <%- include('../partials/header.ejs') %>

        <!-- ********** MAIN *********** -->
        <main>
            <h2 class="titulo-main">Crear producto</h2>

            <form method="POST" id="formulario" action="/product-admin" class="creacion-formulario"
                enctype="multipart/form-data">
                <div class="control-form">
                    <label for="nombre"></label>
                    <input type="text" name="name" id="name" class="control" placeholder="Nombre producto" value="<%= locals.oldData ? oldData.name : null  %> ">
                    <% if (locals.errors && errors.name) { %>
                        <div class="errores">
                            <%= errors.name.msg %>
                        </div>
                        <% } %>
                </div>

                <div class="control-form">
                    <label for=""></label>
                    <input type="text" name="marca" id="marca" class="control" placeholder="Marca" value="<%= locals.oldData ? oldData.marca : null  %>" >
                    <% if (locals.errors && errors.marca) { %>
                        <div class="errores">
                            <%= errors.marca.msg %>
                        </div>
                        <% } %>
                </div>

                <div class="control-form">
                    <label for=""></label>
                    <input type="number" name="discount" id="discount" class="control" placeholder="Descuento %" value="<%= locals.oldData ? oldData.discount : null  %>" >
                    <% if (locals.errors && errors.discount) { %>
                        <div class="errores">
                           <%= errors.discount.msg %> 
                        </div>
                       <% } %>
                </div>

                <div class="control-form">
                    <label for="category" class="titulos-form">Categoria:</label>
                    <select name="category" id="category" class="control">
                        <option value="" selected>Ninguna</option>
                        <option value="destacado">Destacado</option>
                        <option value="oferta">Oferta</option>
                    </select>
                </div>

                <div class="control-form">
                    <label for="imagen" class="titulos-form">Imagenes del producto</label>
                    <input type="file" name="image" id="image" class="control" placeholder="Imagenes" multiple>
                    <% if (locals.errors && errors.image) { %>
                        <div class="errores">
                            <%= errors.image.msg %>
                        </div>
                        <% } %>
                </div>

                <div class="control-check">
                    <label for="talles" class="titulos-form">Talles</label>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" value="22">
                        <label for="">22</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talles" value="24">
                        <label for="">24</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talles" value="26">
                        <label for="">26</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talles" value="28">
                        <label for="">28</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talles" value="30">
                        <label for="">30</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="32">
                        <label for="">32</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="34">
                        <label for="">34</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="35">
                        <label for="">35</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="36">
                        <label for="">36</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="37">
                        <label for="">37</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="38">
                        <label for="">38</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="39">
                        <label for="">39</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="40">
                        <label for="">40</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="41">
                        <label for="">41</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="42">
                        <label for="">42</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="43">
                        <label for="">43</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="44">
                        <label for="">44</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="45">
                        <label for="">45</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="46">
                        <label for="">46</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="47">
                        <label for="">47</label>
                    </div>
                </div>

                <div class="control-form">
                    <label for="precio"></label>
                    <input type="number" name="price" id="price" class="control" placeholder="Precio $$" value="<%= locals.oldData ? oldData.price : null  %>" >
                    <% if (locals.errors && errors.price) { %>
                        <div class="errores">
                           <%= errors.price.msg %> 
                        </div>
                       <% } %>
                </div>

                <div class="control-form">
                    <label for="comentario" class="titulos-form">Descripcion del producto</label>
                    <textarea name="comentario" id="comentario" cols="30" rows="10" class="control"></textarea>
                </div>

                <div class="botones">
                    <button type="submit" class="boton-formulario" style="margin-right: 10px;" id="boton">Crear
                        producto</button>
                    <button type="reset" class="boton-formulario">Borrar</button>
                </div>
            </form>

        </main>


        <!-- ********** FOOTER *********** -->
        <%- include('../partials/footer.ejs') %>

</body>

</html>