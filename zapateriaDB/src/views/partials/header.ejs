<link rel="stylesheet" href="/css/styles-header.css">
<header class="main-header">
  <div class="burger-and-logos-header">
    <div class="burger-menu-header">

      <span class="span1-burger"></span>
      <span class="span2-burger"></span>
      <span class="span3-burger"></span>
    </div>

    <aside id="aside-burger-id">
      <nav class="navBar-burger">
        <ul>
          <li><a class="links-burger" href="/">Inicio</a></li>
          <li><a class="links-burger" href="">Hombre</a></li>
          <li><a class="links-burger" href="">Mujer</a></li>
          <li><a class="links-burger" href="/products/list">Todos los productos</a></li>
        </ul>
      </nav>
    </aside>

    <div class="div-logos-header">
      <a href="/"><img class="isotipo-header" src="/img/logo.jpg" alt="logo de zapateria"></a>
      <a href="/"><img class="logotipo-header" src="/img/logo.jpg" alt="logo de zapateria"></a>
    </div>

    <div class="div-search-header-768">
      <form action="/products/search" method="POST">
        <div class="button-and-input-search-header-768">
          <button type="submit" class="button-search">
            <span><i class="fas fa-search"></i></span>
          </button>
          <input class="input-search-header-768" type="text" name="search" placeholder=" Buscar productos..." />
        </div>
      </form>
    </div>

    <div class="div-user-header">

      <% if (locals.isLogged) { %>
        <div class="profile-container">
          <a href="/user/profile">
            <h3 class="nada"><%= locals.userLogged.name %>
            </h3>
          </a>
          <div>
            <img class="profileimg" src="/img/users/<%= locals.userLogged.image %>">
            <aside id="menu-profile-id">
              <nav class="navbar-menu-profile">
                <ul>
                  <li><a class="links-of-profile" href="/user/profile">Ver perfil</a></li>
                  <li><a class="links-of-profile" href="/products/create">Crear producto</a></li>
                  <!-- <li><a class="links-of-profile" href="">Mis productos</a></li> -->
                </ul>
              </nav>
            </aside>
          </div>
          <div class="cart-logout">
            <a href="/products/cart" style="color: #156C4A;"><i class="fas fa-shopping-cart"></i></a>
            <a class="link-logout-register" href="/user/logout">Cerrar sesión</a>
            <a class="link-logout-fontawesome" href="/user/logout"><i
                class="fa-solid fa-arrow-right-to-bracket"></i></a>
          </div>
        </div>

        <% } else { %>
          <div class="icons-header">
            <a href="/user/login"><i class="fa-solid fa-user"></i></a>
            <a href="/user/register"><i class="fa-solid fa-user-plus"></i></a>
          </div>

          <a class="links-users-header" href="/user/login">Iniciar sesión</a>
          <a class="links-users-header" href="/user/register">Registrarse</a>

          <% } %>

    </div>
  </div>
  </div>

  <div class="div-search-header">
    <form action="/products/search" method="POST">
      <div class="button-and-input-search-header">
        <button type="submit">
          <span><i class="fa-solid fa-magnifying-glass"></i></span>
        </button>
        <input class="input-search-header" type="text" name="search" placeholder="Buscar productos..." />
      </div>
    </form>
  </div>
  <div class="navBar-header">
    <nav class="main-navbar-header">
      <ul class="menu" id="menu">
        <li class="menu-item"><a class="menu-link main-links" href="/">Inicio</a></li>
        <li class="menu-item container-submenu"><a class="menu-link submenu-btn" href="/products/list">Productos</a>
        </li>
        <li class="menu-item container-submenu"><a class="menu-link submenu-btn" href="/">Marcas <i
              class="fa-solid fa-angle-down"></i></a>
          <ul class="subMenu-header">
            <li class="menu-item"><a class="menu-link style-link" href="/products/listbybrand/1">Nike</a></li>
            <li class="menu-item"><a class="menu-link style-link" href="/products/listbybrand/2">Adidas</a></li>
            <li class="menu-item"><a class="menu-link style-link" href="/products/listbybrand/3">Puma</a></li>
            <li class="menu-item"><a class="menu-link style-link" href="/products/listbybrand/4">Topper</a></li>
            <li class="menu-item"><a class="menu-link style-link" href="/products/listbybrand/5">Fila</a></li>
            <li class="menu-item"><a class="menu-link style-link" href="/products/listbybrand/6">Kappa</a></li>
          </ul>
        </li>
        <li class="menu-item"><a class="menu-link" href="/products/listbygender/1">Hombre</a></li>
        <li class="menu-item"><a class="menu-link" href="/products/listbygender/2">Mujer</a></li>
      </ul>
    </nav>
  </div>
</header>